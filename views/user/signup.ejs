<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="whole-form">
            <h2>Sign up for free now</h2>
            <form action="/signup" method="POST" novalidate class="needs-validation edit-form">
                <div class="input-label mb-3">
                    <label for="username1">Username</label>
                    <input type="text" name="username" id="username1"
                        placeholder="Enter Username" class="edit-input form-control" required>
                    <div class="valid-feedback">username looks Good!</div>
                    <div class="invalid-feedback">Please enter a username</div>
                </div>
                <div class="input-label mb-3">
                    <label for="email1">Email</label>
                    <input type="text" name="email" id="email1"
                        placeholder="Enter Email" class="edit-input form-control" required>
                    <div class="valid-feedback">Email looks Good!</div>
                    <div class="invalid-feedback">Please enter a Email</div>
                </div>
                <div class="input-label mb-3">
                    <label for="pass1">Password</label>
                    <input type="password" name="password" id="pass1"
                        placeholder="Enter Password" class="edit-input form-control" required>
                    <div class="valid-feedback">Password looks Good!</div>
                    <div class="invalid-feedback">Please enter a Password</div>
                </div>
                <button class="btn btn-primary">Sign up</button>
            </form>
        </div>
    </body>